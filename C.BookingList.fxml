<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.naingue.demo5.controller.BookingListController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color:#f9fafc;">

    <!-- Top title -->
    <top>
        <HBox alignment="CENTER" style="-fx-padding:20;">
            <Label text="Booking Information"
                   style="-fx-font-size:26px; -fx-font-weight:bold; -fx-text-fill:#222;"/>
        </HBox>
    </top>

    <!-- Center form -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                    <ColumnConstraints halignment="LEFT" prefWidth="300"/>
                </columnConstraints>

                <Label text="Booking ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="bookingIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Customer ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="customerIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Room ID:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="roomIdField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Check-in Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="checkInDate" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Check-out Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <DatePicker fx:id="checkOutDate" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <Button text="Save Booking" onAction="#onSaveBooking"
                    style="-fx-background-color:#007bff; -fx-text-fill:white; -fx-font-size:16px; -fx-background-radius:8; -fx-padding:10 40;"/>
        </VBox>
    </center>
</BorderPane>