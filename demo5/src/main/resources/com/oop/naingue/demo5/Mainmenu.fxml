<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.naingue.demo5.mainmenu.MainmenuController"
            prefWidth="1400" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right, #f8fafc, #e2e8f0);">

    <top>
        <VBox spacing="0">
            <HBox style="-fx-background-color: linear-gradient(to right, #1e3a8a, #3b82f6);
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                  spacing="20" alignment="CENTER" prefHeight="80">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <ImageView fitWidth="45" fitHeight="45" preserveRatio="true">
                        <Image url="@/com/oop/naingue/demo5/images/logoWbg.png" />
                    </ImageView>
                    <VBox spacing="2">
                        <Label text="SchedMoTo"
                               style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
                        <Label text="Hotel Management System"
                               style="-fx-text-fill: #dbeafe; -fx-font-size: 12px;" />
                    </VBox>
                </HBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" fx:id="btnLogout" onAction="#handleLogout"
                        style="-fx-background-color: rgba(255, 255, 255, 0.2);
                               -fx-text-fill: white;
                               -fx-font-size: 14px;
                               -fx-font-weight: bold;
                               -fx-padding: 10 20;
                               -fx-background-radius: 8;
                               -fx-border-color: white;
                               -fx-border-width: 1.5;
                               -fx-border-radius: 8;
                               -fx-cursor: hand;
                               -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);">
                </Button>
                <padding>
                    <Insets left="30" right="30" />
                </padding>
            </HBox>
            <HBox style="-fx-background-color: white; -fx-padding: 15 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 1);"
                  spacing="30" alignment="CENTER_LEFT">
                <Label text="Main Menu" style="-fx-text-fill: #374151; -fx-font-size: 18px; -fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </top>
    <left>
        <VBox spacing="12" alignment="TOP_CENTER"
              style="-fx-padding: 30 20;
                     -fx-background-color: white;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 2, 0);
                     -fx-border-color: #f1f5f9;
                     -fx-border-width: 0 1 0 0;">
            <VBox spacing="8" alignment="CENTER">
                <Button text="Rooms" fx:id="btnRooms" onAction="#handleRoom"
                        style="-fx-background-color: #007bff;
                               -fx-text-fill: white;
                               -fx-font-size: 14px;
                               -fx-font-weight: bold;
                               -fx-padding: 12 25;
                               -fx-background-radius: 10;
                               -fx-effect: dropshadow(three-pass-box, rgba(0, 123, 255, 0.3), 8, 0, 0, 2);
                               -fx-cursor: hand;"
                        prefWidth="180" />
                <Button text="Booking" fx:id="btnBooking" onAction="#handleBooking"
                        style="-fx-background-color: #059669;
                               -fx-text-fill: white;
                               -fx-font-size: 14px;
                               -fx-font-weight: bold;
                               -fx-padding: 12 25;
                               -fx-background-radius: 10;
                               -fx-effect: dropshadow(three-pass-box, rgba(5, 150, 105, 0.3), 8, 0, 0, 2);
                               -fx-cursor: hand;"
                        prefWidth="180" />
                <Button text="Payment" fx:id="btnPayment" onAction="#handlePayment"
                        style="-fx-background-color: #d97706;
                               -fx-text-fill: white;
                               -fx-font-size: 14px;
                               -fx-font-weight: bold;
                               -fx-padding: 12 25;
                               -fx-background-radius: 10;
                               -fx-effect: dropshadow(three-pass-box, rgba(217, 119, 6, 0.3), 8, 0, 0, 2);
                               -fx-cursor: hand;"
                        prefWidth="180" />
                <Region VBox.vgrow="ALWAYS" minHeight="50" />

                <padding>
                    <Insets bottom="20" />
                </padding>
            </VBox>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentArea"
                   style="-fx-background-color: transparent; -fx-padding: 30;">
            <VBox alignment="CENTER" spacing="25" visible="true" fx:id="welcomeContent">
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Welcome to SchedMoTo"
                           style="-fx-text-fill: #1f2937; -fx-font-size: 32px; -fx-font-weight: bold;" />
                    <Label text="Select a section from the sidebar to get started"
                           style="-fx-text-fill: #6b7280; -fx-font-size: 16px;" />
                </VBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>