<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.naingue.demo5.controller.UserBookingsController"
            prefWidth="800" prefHeight="650"
            style="-fx-background-color: linear-gradient(to bottom right, #f8fafc, #e2e8f0);">

    <top>
        <HBox alignment="CENTER_LEFT"
              style="-fx-padding:20; -fx-background-color: linear-gradient(to right, #1e3a8a, #3b82f6);
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label text="Booking Information"
                   style="-fx-font-size:24px; -fx-font-weight:bold; -fx-text-fill:white;"/>
        </HBox>
    </top>

    <center>
        <GridPane hgap="15" vgap="18" style="-fx-padding:40; -fx-background-color:white;
                                              -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);
                                              -fx-background-radius: 10;">
            <columnConstraints>
                <ColumnConstraints percentWidth="30" halignment="RIGHT"/>
                <ColumnConstraints percentWidth="70"/>
            </columnConstraints>

            <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-font-weight:bold; -fx-text-fill:#374151;" alignment="CENTER_RIGHT"/>
            <TextField fx:id="txtFullName" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       promptText="Enter full name" style="-fx-background-radius:8; -fx-padding:6;"/>

            <Label text="Contact Information:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-font-weight:bold; -fx-text-fill:#374151;" alignment="CENTER_RIGHT"/>
            <TextField fx:id="txtContactInfo" GridPane.rowIndex="1" GridPane.columnIndex="1"
                       promptText="Phone number or email address" style="-fx-background-radius:8; -fx-padding:6;"/>

            <Label text="Room ID:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                   style="-fx-font-weight:bold; -fx-text-fill:#374151;" alignment="CENTER_RIGHT"/>
            <TextField fx:id="txtRoomId" GridPane.rowIndex="2" GridPane.columnIndex="1"
                       editable="false" promptText="Auto-filled" style="-fx-background-radius:8; -fx-padding:6;"/>

            <Label text="Room Number:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                   style="-fx-font-weight:bold; -fx-text-fill:#374151;" alignment="CENTER_RIGHT"/>
            <TextField fx:id="txtRoomNo" GridPane.rowIndex="3" GridPane.columnIndex="1"
                       editable="false" promptText="Auto-filled" style="-fx-background-radius:8; -fx-padding:6;"/>

            <Label text="Room Type:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                   style="-fx-font-weight:bold; -fx-text-fill:#374151;" alignment="CENTER_RIGHT"/>
            <TextField fx:id="txtRoomType" GridPane.rowIndex="4" GridPane.columnIndex="1"
                       editable="false" promptText="room type" style="-fx-background-radius:8; -fx-padding:6;"/>

            <Label text="Check-in Date:" GridPane.rowIndex="5" GridPane.columnIndex="0"
                   style="-fx-font-weight:bold; -fx-text-fill:#374151;" alignment="CENTER_RIGHT"/>
            <DatePicker fx:id="dpCheckIn" GridPane.rowIndex="5" GridPane.columnIndex="1"
                        promptText="Select check-in date" style="-fx-background-radius:8; -fx-padding:6;"/>

            <Label text="Check-out Date:" GridPane.rowIndex="6" GridPane.columnIndex="0"
                   style="-fx-font-weight:bold; -fx-text-fill:#374151;" alignment="CENTER_RIGHT"/>
            <DatePicker fx:id="dpCheckOut" GridPane.rowIndex="6" GridPane.columnIndex="1"
                        promptText="Select check-out date" style="-fx-background-radius:8; -fx-padding:6;"/>

            <HBox spacing="15" alignment="CENTER_RIGHT"
                  GridPane.rowIndex="7" GridPane.columnIndex="1" style="-fx-padding:20 0 0 0;">
                <Button fx:id="btnCancel" text="Cancel" onAction="#onCancel"
                        style="-fx-background-color:#f44336; -fx-text-fill:white; -fx-font-weight:bold;
                               -fx-padding:10 20; -fx-background-radius:8; -fx-cursor: hand;"/>
                <Button text="Save Booking" onAction="#onSaveBooking"
                        style="-fx-background-color:#059669; -fx-text-fill:white; -fx-font-weight:bold;
                               -fx-padding:10 20; -fx-background-radius:8; -fx-cursor: hand;"/>
            </HBox>
        </GridPane>
    </center>
</BorderPane>
