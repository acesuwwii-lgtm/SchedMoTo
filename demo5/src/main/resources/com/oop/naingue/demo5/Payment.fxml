<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.naingue.demo5.mainmenu.PaymentController"
            prefWidth="480" prefHeight="400"
            style="-fx-background-color: #f8f9fa; -fx-padding: 20;">

    <VBox spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30">
        <Label text="ðŸ’³ Payment Form" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                <ColumnConstraints minWidth="250"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints vgrow="NEVER"/>
            </rowConstraints>

            <Label text="Booking ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtBookingId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Room ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtRoomId" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Amount:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtAmount" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Payment Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dpPaymentDate" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Payment Method:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cmbMethod" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>


        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="confirmButton" text="Confirm Payment" onAction="#onConfirmPayment"
                    style="-fx-background-color: #198754; -fx-text-fill: white; -fx-padding: 6 14;"/>
            <Button fx:id="btnCancel" text="Cancel" onAction="#onCancel"
                    style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-padding: 6 14;"/>
        </HBox>
    </VBox>
</AnchorPane>
