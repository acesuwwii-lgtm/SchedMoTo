<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.naingue.demo5.controller.PaymentController"
            prefWidth="480" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #f8fafc, #e2e8f0); -fx-padding: 20;">

    <VBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <!-- Title -->
        <Label text="ðŸ’³ Payment Form"
               style="-fx-text-fill: #1f2937; -fx-font-size: 22px; -fx-font-weight: bold;"/>

        <!-- Form Grid -->
        <GridPane hgap="15" vgap="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 2);">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                <ColumnConstraints minWidth="250"/>
            </columnConstraints>

            <!-- Payment ID / Booking Link -->
            <Label text="Booking ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-text-fill: #374151; -fx-font-size: 14px;"/>
            <TextField fx:id="txtBookingId" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d1d5db; -fx-padding: 6 10;"/>

            <!-- Amount -->
            <Label text="Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-text-fill: #374151; -fx-font-size: 14px;"/>
            <TextField fx:id="txtAmount" GridPane.rowIndex="1" GridPane.columnIndex="1"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d1d5db; -fx-padding: 6 10;"/>

            <!-- Payment Date -->
            <Label text="Payment Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                   style="-fx-text-fill: #374151; -fx-font-size: 14px;"/>
            <DatePicker fx:id="dpPaymentDate" GridPane.rowIndex="2" GridPane.columnIndex="1"
                        style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d1d5db; -fx-padding: 6 10;"/>

            <!-- Payment Method -->
            <Label text="Payment Method:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                   style="-fx-text-fill: #374151; -fx-font-size: 14px;"/>
            <ComboBox fx:id="cmbMethod" GridPane.rowIndex="3" GridPane.columnIndex="1"
                      style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d1d5db; -fx-padding: 6 10;"/>

            <!-- Payment Status -->
            <Label text="Payment Status:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                   style="-fx-text-fill: #374151; -fx-font-size: 14px;"/>
            <ComboBox fx:id="cmbStatus" GridPane.rowIndex="4" GridPane.columnIndex="1"
                      style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d1d5db; -fx-padding: 6 10;"/>
        </GridPane>

        <!-- Buttons -->
        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Button fx:id="confirmButton" text="Confirm Payment" onAction="#onConfirmPayment"
                    style="-fx-background-color: #d97706; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 8 18; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(217,119,6,0.3), 6, 0, 0, 2);"/>
            <Button fx:id="btnCancel" text="Cancel" onAction="#onCancel"
                    style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 8 18; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(239,68,68,0.3), 6, 0, 0, 2);"/>
        </HBox>
    </VBox>
</AnchorPane>
