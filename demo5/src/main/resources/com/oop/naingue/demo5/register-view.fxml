<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #f5f5f5;"
           xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.oop.naingue.demo5.controller.RegisterController">

    <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets bottom="30" left="40" right="40" top="30" />
        </padding>

        <VBox alignment="CENTER" spacing="5">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Create Account" />
            <Label style="-fx-font-size: 14px; -fx-text-fill: #888;" text="Join SchedMoTo today!" />
        </VBox>

        <VBox spacing="12" style="-fx-padding: 10;">
            <VBox spacing="5">
                <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Username *" />
                <TextField fx:id="userNameField" promptText="Choose a username" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Email Address *" />
                <TextField fx:id="emailField" promptText="your.email@example.com" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Address *" />
                <TextField fx:id="addressField" promptText="Enter your address" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Phone Number *" />
                <TextField fx:id="phoneField" promptText="+1234567890" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Password *" />
                <PasswordField fx:id="passwordField" promptText="At least 6 characters" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Confirm Password *" />
                <PasswordField fx:id="confirmField" promptText="Re-enter your password" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
            </VBox>

            <Label fx:id="lblError" style="-fx-text-fill: #d32f2f; -fx-font-size: 12px;" text="" visible="false" wrapText="true" />
            <Label fx:id="lblSuccess" style="-fx-text-fill: #2e7d32; -fx-font-size: 12px;" text="" visible="false" wrapText="true" />

            <Button maxWidth="Infinity" onAction="#onRegSubmit" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12; -fx-background-radius: 5; -fx-cursor: hand;" text="Create Account">
                <font>
                    <Font name="System Bold" size="16" />
                </font>
            </Button>

            <HBox alignment="CENTER" spacing="5">
                <Label style="-fx-font-size: 13px; -fx-text-fill: #666;" text="Already have an account?" />
                <Hyperlink fx:id="onLoginSubmit" onAction="#onLoginSubmit" style="-fx-font-size: 13px; -fx-text-fill: #1976d2; -fx-font-weight: bold;" text="Login" />
            </HBox>
        </VBox>
    </VBox>

</StackPane>
