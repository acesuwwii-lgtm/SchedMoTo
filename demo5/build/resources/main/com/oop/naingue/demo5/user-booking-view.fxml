<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="650" prefWidth="800" style="-fx-background-color: linear-gradient(to bottom right, #f8fafc, #e2e8f0);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.naingue.demo5.controller.UserBookingsController">

    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-padding:20; -fx-background-color: linear-gradient(to right, #1e3a8a, #3b82f6);                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label style="-fx-font-size:24px; -fx-font-weight:bold; -fx-text-fill:white;" text="Booking Information" />
        </HBox>
    </top>

    <center>
        <GridPane hgap="15" style="-fx-padding:40; -fx-background-color:white;                                               -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);                                               -fx-background-radius: 10;" vgap="18">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" percentWidth="30" />
                <ColumnConstraints percentWidth="70" />
            </columnConstraints>

            <Label alignment="CENTER_RIGHT" style="-fx-font-weight:bold; -fx-text-fill:#374151;" text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtFullName" promptText="Enter full name" style="-fx-background-radius:8; -fx-padding:6;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label alignment="CENTER_RIGHT" style="-fx-font-weight:bold; -fx-text-fill:#374151;" text="Contact Information:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="txtContactInfo" promptText="Phone number or email address" style="-fx-background-radius:8; -fx-padding:6;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label alignment="CENTER_RIGHT" style="-fx-font-weight:bold; -fx-text-fill:#374151;" text="Room ID:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="txtRoomId" editable="false" promptText="Auto-filled" style="-fx-background-radius:8; -fx-padding:6;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label alignment="CENTER_RIGHT" style="-fx-font-weight:bold; -fx-text-fill:#374151;" text="Room Number:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="txtRoomNo" editable="false" promptText="Auto-filled" style="-fx-background-radius:8; -fx-padding:6;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label alignment="CENTER_RIGHT" style="-fx-font-weight:bold; -fx-text-fill:#374151;" text="Room Type:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="txtRoomType" editable="false" promptText="room type" style="-fx-background-radius:8; -fx-padding:6;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label alignment="CENTER_RIGHT" style="-fx-font-weight:bold; -fx-text-fill:#374151;" text="Check-in Date:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <DatePicker fx:id="dpCheckIn" promptText="Select check-in date" style="-fx-background-radius:8; -fx-padding:6;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label alignment="CENTER_RIGHT" style="-fx-font-weight:bold; -fx-text-fill:#374151;" text="Check-out Date:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <DatePicker fx:id="dpCheckOut" promptText="Select check-out date" style="-fx-background-radius:8; -fx-padding:6;" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding:20 0 0 0;" GridPane.columnIndex="1" GridPane.rowIndex="7">
                <Button fx:id="btnCancel" onAction="#onCancel" style="-fx-background-color:#f44336; -fx-text-fill:white; -fx-font-weight:bold;                                -fx-padding:10 20; -fx-background-radius:8; -fx-cursor: hand;" text="Cancel" />
                <Button fx:id="btnSave" onAction="#onSaveBooking" style="-fx-background-color:#059669; -fx-text-fill:white; -fx-font-weight:bold;                                -fx-padding:10 20; -fx-background-radius:8; -fx-cursor: hand;" text="Save Booking" />
            </HBox>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </center>
</BorderPane>
